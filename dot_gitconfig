[user]
	name = Yanick Minder
	email = minder@puzzle.ch
	signingkey = 6DD3216D9EAB9F24
	
[alias]
    co = checkout
    coo = !git fetch && git checkout
    ci = commit
	cc = czg
	ccr = !git ra && czg --retry
	ra = "!git diff --name-only --cached | xargs -l git add"  
	acc = "!!g add && g cc "
	accr = "!!g add && g ccr "
	ccc = "!czg --retry && git commit --amend"
    st = status
    br = branch
    rb = "!git rebase $(git rev-parse --abbrev-ref origin/HEAD)"
    hist = "!f() { git log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short $@; }; f"
    type = cat-file -t
    dump = cat-file -p
    aa = add -A 
    aaa = !git aa && git amend
	au = add -u
    cob = checkout -b
    cm = commit -m
    cood = "!f() { git fetch $1 && git br -D $1 git co $1}; f"
	current = rev-parse --abbrev-ref HEAD
	currentOrigin = rev-parse --abbrev-ref --symbolic-full-name @{u}
	squashBranch = !git reset $(git merge-base $(git rev-parse --abbrev-ref origin/HEAD) $(git current))
	lock = update-index --skip-worktree
	unlock = update-index --no-skip-worktree
	pullf = !git fetch && git reset --hard $(git currentOrigin)
	runCheck = !git stash && git commit --allow-empty -m 'Trigger workflow' && git push && git stash pop
	clear = !git restore --worktree --staged .
	sb = squashBranch
	amend = commit --amend --no-edit
    set-latest-date = "!f() { GIT_COMMITTER_DATE=\"$1\" git commit --date=\"$1\" --amend --no-edit --allow-empty; }; f"
	pfusch = push --force-with-lease
	prune-branches = !git fetch -p && git branch -vv | grep \": gone]\" | cut -d \" \" -f 1 | xargs git branch -D
	brn = "!f() { old_name=$(git branch --show-current); git branch -m \"$1\" && git push origin -u \"$1\" && git push origin --delete \"$old_name\"; }; f"
	bbrn = "!f() { git branch -m \"$1\" \"$2\" && git push origin -u \"$2\" && git push origin --delete \"$1\"; }; f"
[core]
	autocrlf = input
	excludesfile = /home/yanickminder/.config/git/ignore
	pager = diff-so-fancy | less --tabs=4 -RF
	hooksPath =~/.githooks
	rerere=true
[init]
	defaultBranch = main
[diff]
    tool = idea
[difftool "idea"]
    cmd = idea diff $LOCAL $REMOTE
[merge]
    tool = idea
[mergetool "idea"]
    cmd = idea merge $LOCAL $REMOTE $BASE $MERGED
    trustExitCode = true 
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[push]
	autoSetupRemote = true
	default = simple
[pull]
	rebase = true
[commit]
	gpgsign = true
[tag]
	gpgSign = true
